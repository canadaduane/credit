{
  "name": "js-with-ts",
  "displayName": "JS with TS",
  "description": "Javascript with Typescript types as comments",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "main": "./dist/extension.js",
  "author": "Duane Johnson <duane.johnson@gmail.com>",
  "license": "MIT",
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/canadaduane/credit.git"
  },
  "homepage": "https://github.com/canadaduane/credit#readme",
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "The extension requires workspace trust because it executes code specified by the workspace. Loading the user's node_modules and loading config files is disabled when untrusted."
    }
  },
  "contributes": {
    "commands": [],
    "configuration": {
      "jswithts.enable-ts-plugin": {
        "type": "boolean",
        "default": false,
        "title": "Enable TypeScript jswithts plugin",
        "description": "Enables a TypeScript plugin which enalbes typescript comments in javascript"
      },
      "jswithts.ask-to-enable-ts-plugin": {
        "type": "boolean",
        "default": true,
        "title": "Ask to enable TypeScript jswithts plugin",
        "description": "Ask on startup to enable the TypeScript plugin."
      }
    },
    "grammars": [
      {
        "path": "./grammars/js-with-ts.json",
        "scopeName": "js-with-ts.injection",
        "injectTo": [
          "source.js"
        ],
        "embeddedLanguages": {
          "meta.embedded.ts": "typescriptreact"
        }
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "jswithts-typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "webpack": "webpack",
    "vscode:prepublish": "pnpm install && webpack",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "jswithts-typescript-plugin": "workspace:*"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.7",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
