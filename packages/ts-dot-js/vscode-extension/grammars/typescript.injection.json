        {
          "include": "source.ts"
        }
      ]
    },
    {
      "begin": "(^|\\G)(:)",
      "beginCaptures": {
        "2": {
          "name": "keyword.operator.type.annotation.ts.ts-dot-js"
        }
      },
      "end": "(?=\\*/)",
      "contentName": "source.ts",
      "patterns": [
        {
          "include": "source.ts"
        }
      ]
    }
  ]
}
