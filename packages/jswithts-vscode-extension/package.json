{
  "name": "jswithts-vscode",
  "version": "0.1.0",
  "description": "Javascript with Typescript Comments (jswithts) support for VSCode",
  "main": "dist/src/extension.js",
  "publisher": "canadaduane",
  "scripts": {
    "build": "tsc -p ./",
    "vscode:prepublish": "pnpm install && pnpm run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "package": "vsce package --no-dependencies",
    "watch": "tsc -w -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/canadaduane/credit.git"
  },
  "keywords": [
    "vscode"
  ],
  "author": "Duane Johnson <duane.johnson@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/canadaduane/credit#readme",
  "displayName": "jswithts for VSCode",
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "engines": {
    "vscode": "^1.67.0"
  },
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "The extension requires workspace trust because it executes code specified by the workspace. Loading the user's node_modules and loading config files is disabled when untrusted"
    }
  },
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "jswithts-typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "configuration": {
      "jswithts.enable-ts-plugin": {
        "type": "boolean",
        "default": false,
        "title": "Enable TypeScript jswithts plugin",
        "description": "Enables a TypeScript plugin which enalbes typescript comments in javascript"
      },
      "jswithts.ask-to-enable-ts-plugin": {
        "type": "boolean",
        "default": true,
        "title": "Ask to enable TypeScript jswithts plugin",
        "description": "Ask on startup to enable the TypeScript plugin."
      }
    },
    "grammars": [
      {
        "path": "./src/grammar.json",
        "scopeName": "jswithts.injection",
        "injectTo": [
          "source.js"
        ],
        "embeddedLanguages": {
          "meta.embedded.ts": "typescriptreact"
        }
      }
    ]
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.0",
    "@types/lodash": "^4.14.116",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.67",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.7",
    "js-yaml": "^3.14.0",
    "tslib": "^2.4.0",
    "typescript": "*",
    "vscode-tmgrammar-test": "^0.0.11"
  },
  "dependencies": {
    "jswithts-typescript-plugin": "workspace:*",
    "lodash": "^4.17.21",
    "vscode-languageclient": "^8.0.0"
  }
}
